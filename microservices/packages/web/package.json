{
  "name": "@microreads/web",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && NODE_ENV=production webpack",
    "deploy": "now && now alias && now remove microreads --safe",
    "start": "webpack-dev-server --config ./webpack.config.js --port 3000",
    "test": "jest",
    "now-start": "serve --single ./dist"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/test/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "now": {
    "name": "microreads",
    "alias": "microreads"
  },
  "keywords": [],
  "author": "Jiayi Hu <jiayi.ghu@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/jest": "^24.0.11",
    "@types/luxon": "^1.11.1",
    "@types/node": "^10.5.1",
    "@types/webpack": "^4.4.11",
    "autoprefixer": "^9.5.0",
    "basichtml": "^0.21.2",
    "copy-webpack-plugin": "^4.5.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.5.0",
    "now": "^12.1.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^0.5.1",
    "serve": "^10.0.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "hyperhtml": "^2.13.2",
    "hyperhtml-app": "^0.2.3",
    "hyperhtml-element": "^3.0.1",
    "luxon": "^1.11.4",
    "redux": "^4.0.1"
  }
}
